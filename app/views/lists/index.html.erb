<div><%= render "/components/navbar" %></div>
<div class="body-container">
  <div class="main-sidebar">
    <%= render "/components/sidebar", lists: @lists %>
  </div>

  <div class="main-container">
    <div class="banner-container" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://images.hdqwalls.com/wallpapers/netflix-the-witcher-cm.jpg');">
      <h1>Welcome to watch list!</h1>
    </div>
    <div class="card-container style= margin-left: 20px;">
    <div class="cards">
      <% @lists.each do |list| %>
        <% unless list.photo.key.nil? %>

          <%= link_to list_path(list)  do %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path list.photo.key, height: 300, crop: :fill %>)">
                <%= list.name %>
            </div>
          <% end %>

        <% else %>

          <%= link_to list_path(list)  do %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('https://townsquare.media/site/442/files/2015/04/best-superhero-movies-all-time-pic.jpg?w=1200&h=0&zc=1&s=0&a=t&q=89')">
              <%= list.name %>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
      <%= link_to "New List", new_list_path%>
    </div>
  </div>


</div>
